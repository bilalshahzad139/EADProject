@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

    <div class="main-div">
        <form action="@Url.Content("~/User/Login")" method="POST">
            <img src="@Url.Content("~/Images/profile.png")" class="avatar">
            <h2>Welcome</h2>
            <div class="input-div one">
                <div class="i">
                    <i class="fa fa-user"></i>
                </div>
                <div>
                    <h5>Login ID</h5>
                    <input class="input" type="text" name="login" value="@ViewBag.Login" required autofocus>
                </div>
            </div>
            <div class="input-div two">
                <div class="i">
                    <i class="fa fa-lock"></i>
                </div>
                <div>
                    <h5>Password</h5>
                    <input class="input" type="password" name="password" required>
                </div>
            </div>
            <div class="forgot-pass">
                <a href="#">Forgot Password?</a>
            </div>
            <input type="submit" class="btn" value="Login" name="loginbtn">
            <a href='@Url.Content("~/User/Signup")'>Don’t have an account?</a><br />
            <p style="color:red;" id="pid">@ViewBag.MSG</p>
        </form>

    </div>

@section scripts{
	
	<script>
         
    setTimeout(() => {
        const elem = $("#pid").text("");
        }, 2000);
	</script>
	}















